println("=== Testing nested loops with break ===");
for x in 0..3 {
    for y in 0..3 {
        if y == 2 {
            break;
        }
        print(x);
        print(" ");
        println(y);
    }
}

println("");
println("=== Testing nested loops with continue ===");
for a in 0..3 {
    for b in 0..3 {
        if b == 1 {
            continue;
        }
        print(a);
        print(" ");
        println(b);
    }
}

println("");
println("=== Testing break and continue together ===");
for n in 0..10 {
    if n == 2 {
        continue;
    }
    if n == 7 {
        break;
    }
    println(n);
}

println("");
println("=== All tests complete ===");

println("=== Testing break in for loop ===");
for j in 0..10 {
    if j == 5 {
        break;
    }
    println(j);
}

println("");
println("=== Testing continue in for loop ===");
for k in 0..5 {
    if k == 2 {
        continue;
    }
    println(k);
}


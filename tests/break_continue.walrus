println("=== Testing break in while loop ===");
let i = 0;
while i < 10 {
    if i == 5 {
        break;
    }
    println(i);
    i = i + 1;
}
println("After break, i is:");
println(i);

println("");
println("=== Testing continue in while loop ===");
i = 0;
while i < 5 {
    i = i + 1;
    if i == 3 {
        continue;
    }
    println(i);
}


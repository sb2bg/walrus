{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Walrus Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ],
      "preLaunchTask": "Build walrus-lsp (repo root)"
    }
  ]
}
